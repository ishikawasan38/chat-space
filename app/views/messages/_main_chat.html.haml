.chat-main
  .chat-main__group-info
    .info-box
      .info-box__title
        .group-name
          =@group.name
        .group-message
          - @group.users.each do |user|
            = user.name
      .info-box__edit
        = link_to new_group_path, class: "contents__btn" do
          Edit
  .chat-main__message-list
    .chat-comment
      = render @messages
      .chat-comment__name
        .group-name1
        .group-time1

      .chat-comment__name2
        

  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .message-area
        = f.text_field :content, class: 'message-area1', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = fa_icon 'picture-o'
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'contents__btn' 
          

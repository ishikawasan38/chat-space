.side-bar
  .side-bar__user-name 
    .top-items
      .top-items__name 
        = current_user.name
      .top-items__icons 
        = link_to "#", class: "contents__btn" do
          = fa_icon 'pencil-square-o', class: 'icon'
        = link_to edit_user_path(current_user), class: "contents__btn" do
          = fa_icon 'cog', class: 'icon'

  .side-bar__group-list
    .group-comment
      .group-comment__name1
        user name
      .group-comment__name2
        not message
